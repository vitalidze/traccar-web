<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
    xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
    xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
    xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu">

  <ui:with field='i18n' type='org.traccar.web.client.i18n.Messages' />

 
<ui:style>
      
    @external gwt-Button gwt-Button-right gwt-Button-rightty app-menu logo-button;
    .gwt-Button { 
      background-color: #3B4767 !important;
      border-radius: 1px;
      color: 0 !important;
      padding-right: 18px;
      border: 0px solid #bbb;
      border-bottom: 0px solid #999;
      cursor: pointer;
      text-shadow: 0 0px 0 #ddd;
      
      }
      
      .gwt-Button-right { 
      background-color: 0 !important;
      padding-left: 18px;
      border: 0px solid #bbb;
      border-bottom: 0px solid #999;
      cursor: pointer;
      text-shadow: 0 0px 0 #ddd;
      
      }
      
      .gwt-Button-rightty { 
      background-color: 0 !important;
      padding-left: 18px;
      padding-right: 18px;
      padding-top: 0px;
      padding-bottom: 0px;
      border: 0px solid #bbb;
      border-bottom: 0px solid #999;
      cursor: pointer;
      text-shadow: 0 0px 0 #ddd;
      
      }
      
    .app-menu {
      background-color: #3B4767 !important;
      background-image: none !important;
      margin: 0px 0px 0px 0px;
      padding: 0px 0px 0px 0px;
      
    }
      
    .logo-button{
      padding-right: 55px;
      background-image: none !important;
       background-color: 0 !important;
      }
      
      /** Button test ********************/
  </ui:style>

  <gxt:ContentPanel ui:field="contentPanel" headerVisible="false" addStyleNames="{style.app-menu}">
      
    <toolbar:ToolBar addStyleNames="{style.app-menu}">
        <!--Logo crap crap-->
        <button:TextButton ui:field="logoButton" addStyleNames="{style.logo-button}">
            &nbsp;<img style="vertical-align:middle" height="24px" width="65px" src='http://localhost/BHN_only.png' />
        </button:TextButton>
        
        <button:TextButton ui:field="reportsButton" addStyleNames="{style.gwt-Button}">
            <img style="vertical-align:middle" src='http://localhost/report.svg' />&nbsp;<font>Reports</font>
        </button:TextButton>
        <button:TextButton ui:field="groupsButton" addStyleNames="{style.gwt-Button}">
            <img style="vertical-align:middle" src='http://localhost/folder.svg' />&nbsp;<font>Groups</font>
        </button:TextButton>
      <button:TextButton ui:field="settingsButton" addStyleNames="{style.gwt-Button}">
            <img style="vertical-align:middle" src='http://localhost/settings.svg' />&nbsp;<font>Settings</font>
        <button:menu>
          <menu:Menu>
            <menu:MenuItem text="{i18n.users}" ui:field="settingsUsers" visible="false" />
            <menu:MenuItem text="{i18n.global}" ui:field="settingsGlobal" visible="false" />
            <menu:MenuItem text="{i18n.notifications}" ui:field="settingsNotifications" visible="false" />
            <menu:MenuItem text="{i18n.defaultPreferences}" ui:field="settingsDefaultPreferences" visible="false" />
          </menu:Menu>
        </button:menu>
      </button:TextButton>
      <button:TextButton ui:field="logsButton" addStyleNames="{style.gwt-Button}">
            <img style="vertical-align:middle" src='http://localhost/log.svg' />&nbsp;<font>Logger</font>
        <button:menu>
          <menu:Menu>
            <menu:MenuItem text="{i18n.trackerServerLog}" ui:field="showTrackerServerLog" />
            <menu:MenuItem text="{i18n.wrapperLog}" ui:field="showWrapperLog" />
          </menu:Menu>
        </button:menu>
      </button:TextButton>
      <button:TextButton ui:field="importButton" addStyleNames="{style.gwt-Button}">
            <img style="vertical-align:middle" src='http://localhost/import.svg' />&nbsp;<font>Import</font>
      </button:TextButton>
      <toolbar:FillToolItem/>
      <button:TextButton ui:field="settingsAccount" addStyleNames="{style.gwt-Button-right}">
          <img style="vertical-align:middle" src='http://localhost/profile.svg' />&nbsp;<font>Profile settings</font>
      </button:TextButton>
      <button:TextButton ui:field="settingsPreferences" addStyleNames="{style.gwt-Button-right}">
          <img style="vertical-align:middle" src='http://localhost/map.svg' />&nbsp;<font>Map options</font>
      </button:TextButton>
      <button:TextButton ui:field="logoutButton" addStyleNames="{style.gwt-Button-rightty}">
          <img style="vertical-align:middle" src='http://localhost/signout.svg' />&nbsp;<font>Sign out</font>
      </button:TextButton>
    </toolbar:ToolBar>
  </gxt:ContentPanel>
</ui:UiBinder>