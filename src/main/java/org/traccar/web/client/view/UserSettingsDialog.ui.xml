<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
  	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
  	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
  	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
    xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid">

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="verticalLayoutData">
    <ui:attributes width="1" height="-1" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="horizontalLayoutData">
    <ui:attributes width="-1" height="-1" />
  </ui:with>

  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="bottomMargin10">
    <ui:attributes bottom="10" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="verticalLayoutDataWithButton">
    <ui:attributes width="1" height="-1"  margins="{bottomMargin10}" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="horizontalLayoutDataTwoWidgets">
    <ui:attributes width="0.5" height="-1" />
  </ui:with>

  <ui:with field='i18n' type='org.traccar.web.client.i18n.Messages' />

  <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="shortPropertyEditor" />

  <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="integerPropertyEditor" />

  <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="doublePropertyEditor" />

  <ui:with type="com.sencha.gxt.widget.core.client.grid.GridView" field="view" />
  <ui:with type="com.sencha.gxt.data.shared.ListStore" field="overlayTypeStore" />
  <ui:with type="com.sencha.gxt.widget.core.client.grid.ColumnModel" field="columnModel" />

  <ui:style>
    .pad3 {
        padding: 3px 3px 0px 3px;
    }

    .customizeButtonGaps > div {
        margin-left: 4px;
    }

    .customizeButtonGaps div > div {
        padding-top: 0;
        padding-bottom: 0;
    }
  </ui:style>

  <gxt:Window ui:field="window" pixelSize="445, 590" modal="true" headingText="{i18n.preferences}" focusWidget="{saveButton}">
    <container:VerticalLayoutContainer>
      <container:child layoutData="{verticalLayoutData}">
        <form:FieldLabel text="{i18n.speedUnits}" labelWidth="160">
          <form:widget>
            <form:ComboBox ui:field="speedUnit" />
          </form:widget>
        </form:FieldLabel>
      </container:child>
      <container:child layoutData="{verticalLayoutData}">
        <form:FieldLabel text="{i18n.timeZone}" labelWidth="160">
          <form:widget>
            <form:ComboBox ui:field="timeZone" />
          </form:widget>
        </form:FieldLabel>
      </container:child>
      <container:child layoutData="{verticalLayoutData}">
        <form:FieldLabel text="{i18n.timePrintInterval}" labelWidth="160">
          <form:widget>
            <form:NumberField editor="{shortPropertyEditor}"
                              ui:field="timePrintInterval"
                              allowNegative="false"
                              allowDecimals="false"
                              allowBlank="false"
                              width="4" />
          </form:widget>
        </form:FieldLabel>
      </container:child>
        <container:child layoutData="{verticalLayoutData}">
            <form:FieldLabel text="{i18n.traceInterval}" labelWidth="160">
                <form:widget>
                    <form:NumberField editor="{shortPropertyEditor}"
                                      ui:field="traceInterval"
                                      allowNegative="false"
                                      allowDecimals="false"
                                      allowBlank="true"
                                      width="4" />
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{verticalLayoutDataWithButton}">
            <form:FieldLabel text="{i18n.followedDeviceZoomLevel}" labelWidth="160">
                <form:widget>
                    <container:HorizontalLayoutContainer>
                        <container:child layoutData="{horizontalLayoutDataTwoWidgets}">
                            <form:NumberField editor="{shortPropertyEditor}"
                                              ui:field="followedDeviceZoomLevel"
                                              allowNegative="false"
                                              allowDecimals="false"
                                              allowBlank="true"
                                              width="4"
                                              title="{i18n.followedDeviceZoomLevelToolTip}"/>
                        </container:child>
                        <container:child layoutData="{horizontalLayoutDataTwoWidgets}">
                            <button:TextButton ui:field="setZoomLevelToCurrentButton"
                                               text="{i18n.useCurrentZoomLevel}"
                                               addStyleNames='{style.customizeButtonGaps}' />
                        </container:child>
                    </container:HorizontalLayoutContainer>
                </form:widget>
            </form:FieldLabel>
        </container:child>
      <container:child layoutData="{verticalLayoutData}">
          <gxt:FramedPanel headingText="{i18n.defaultMapState}" bodyStyleName="{style.pad3}">
              <container:VerticalLayoutContainer>
                  <container:child layoutData="{verticalLayoutData}">
                      <form:FieldLabel text="{i18n.map}" labelWidth="180">
                          <form:widget>
                              <form:ComboBox ui:field="mapType" />
                          </form:widget>
                      </form:FieldLabel>
                  </container:child>
                  <container:child layoutData="{verticalLayoutData}">
                      <form:FieldLabel text="{i18n.longitude}" labelWidth="180">
                          <form:widget>
                              <form:NumberField editor="{doublePropertyEditor}"
                                                ui:field="centerLongitude"
                                                allowNegative="true"
                                                allowDecimals="true"
                                                allowBlank="false"/>
                          </form:widget>
                      </form:FieldLabel>
                  </container:child>
                  <container:child layoutData="{verticalLayoutData}">
                      <form:FieldLabel text="{i18n.latitude}" labelWidth="180">
                          <form:widget>
                              <form:NumberField editor="{doublePropertyEditor}"
                                                ui:field="centerLatitude"
                                                allowNegative="true"
                                                allowDecimals="true"
                                                allowBlank="false"/>
                          </form:widget>
                      </form:FieldLabel>
                  </container:child>
                  <container:child layoutData="{verticalLayoutData}">
                      <form:FieldLabel text="{i18n.zoom}" labelWidth="180">
                          <form:widget>
                              <form:NumberField editor="{integerPropertyEditor}"
                                                ui:field="zoomLevel"
                                                allowNegative="false"
                                                allowDecimals="false"
                                                allowBlank="false" />
                          </form:widget>
                      </form:FieldLabel>
                  </container:child>
                  <container:child layoutData="{verticalLayoutData}">
                      <form:FieldLabel text="{i18n.maximizeOverviewMap}" labelWidth="180">
                          <form:widget>
                              <form:CheckBox ui:field="maximizeOverviewMap" />
                          </form:widget>
                      </form:FieldLabel>
                  </container:child>
                  <container:child layoutData="{verticalLayoutData}">
                      <form:FieldLabel text="{i18n.overlays}" labelWidth="160">
                          <form:widget>
                              <grid:Grid ui:field="grid" store="{overlayTypeStore}" cm="{columnModel}" view="{view}" />
                          </form:widget>
                      </form:FieldLabel>
                  </container:child>
                  <container:child layoutData="{horizontalLayoutData}">
                      <button:TextButton ui:field="takeFromMapButton" text="{i18n.takeFromMap}" />
                  </container:child>
              </container:VerticalLayoutContainer>
          </gxt:FramedPanel>
      </container:child>
    </container:VerticalLayoutContainer>

    <gxt:button>
      <button:TextButton ui:field="saveButton" text="{i18n.save}" />
    </gxt:button>
    <gxt:button>
      <button:TextButton ui:field="cancelButton" text="{i18n.cancel}" />
    </gxt:button>
  </gxt:Window>

</ui:UiBinder>
